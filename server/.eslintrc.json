{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "es2015",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-mixed-spaces-and-tabs": [
            "warn"
        ]
    }
}