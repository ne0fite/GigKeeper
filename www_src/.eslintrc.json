{
    "globals": {
        "angular": true,
        "kendo": true,
        "moment": true
    },
    "env": {
        "browser": true
    },
    "extends": "plugin:angular/johnpapa",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-mixed-spaces-and-tabs": [
            "warn"
        ]
    },
    "plugins": [
        "angular"
    ]
}